<div class="container">
    <div class="header">
        Game Id: {{ GUVRS_GAME_ID }}
        <button class="settings-btn"><i title="Click to open settings window" class="fas fa-cog"></i></button>
    </div>

    <div class="content">
        <div class="pane" id="player1">
            <h1 id="GUVRS_PLAYER_NAME">{{ GUVRS_PLAYER_NAME }}</h1>
            <div class="data-row">
                <span class="data-label">Guid:</span>
                <span class="data-value"><a id="GUVRS_PLAYER_GUID" title="Click to open deck in gudecks.com" class="guid" href="#">{{ GUVRS_PLAYER_GUID }}</a> <i title="Click to copy guid to clipboard" class="fas fa-copy copy-icon"></i></span>
            </div>
        </div>

        <div class="pane" id="player2">
            <h1 id="GUVRS_OPPONENT_NAME">{{ GUVRS_OPPONENT_NAME }}</h1>
            <div class="data-row">
                <span class="data-label">Guid:</span>
                <span class="data-value"><a id="GUVRS_OPPONENT_GUID" title="Click to open deck in gudecks.com" class="guid" href="#">{{ GUVRS_OPPONENT_GUID }}</a> <i title="Click to copy guid to clipboard" class="fas fa-copy copy-icon"></i></span>
            </div>
        </div>
    </div>
</div>

<div class="footer">
    Report any issues to <a title="Click to report any errors to github.com" href="#">github</a>
</div>

<div class="overlay" id="settings-overlay">
    <div class="settings-modal">
        <h2>Settings</h2>
        <div class="setting-row">
            <label for="dropdown-setting">Theme:</label>
            <select id="dropdown-setting">
                <option value="option1">black-orange</option>
            </select>
        </div>
        <div class="setting-row">
            <div class="toggle-container">
                <input type="checkbox" id="auto-open-toggle" class="toggle-input">
                <label for="auto-open-toggle" class="toggle-label">
                    Auto-Open:
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>

        <!-- Buttons -->
        <div class="button-row">
            <button id="save-settings">Save</button>
            <button id="cancel-settings">Cancel</button>
        </div>
    </div>
</div>